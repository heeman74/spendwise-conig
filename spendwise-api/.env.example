# Database
DATABASE_URL="postgresql://spendwise:YOUR_PASSWORD@localhost:5433/spendwise"

# Redis
REDIS_URL="redis://:YOUR_REDIS_PASSWORD@localhost:6379"

# JWT Secret (shared with frontend NEXTAUTH_SECRET)
JWT_SECRET="change-this-to-a-secure-random-string"

# Server
PORT=4000
NODE_ENV=development

# Two-Factor Authentication
ENCRYPTION_KEY="generate-a-64-char-hex-string"

# Email Service (Nodemailer with SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@spendwise.com"
SMTP_FROM_NAME="SpendWise"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Prisma field-level encryption key (AES-256-GCM)
PRISMA_FIELD_ENCRYPTION_KEY="generate-with-npx-tsx-scripts/generate-encryption-key.ts"

# Plaid API (for bank account integration)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"
PLAID_ENV="sandbox"

# Anthropic API (for AI-powered advice)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# CORS (comma-separated origins, defaults to localhost)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
